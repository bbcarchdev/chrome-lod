{
  "manifest_version": 2,

  "name": "LOD-check",
  "description": "Checks pages as you browse for the presence of Linked Open Data behind them and reveals the underlying data.",
  "version": "1.1.2",
  "permissions": [
    "webRequest",
    "<all_urls>"
  ],
  "icons": {
    "16": "package-icon-16.png",
    "48": "package-icon-48.png",
    "128": "package-icon-128.png"
  },    
  "page_action": {
    "default_icon": {
      "19": "package-icon-19.png"
    }
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [ "jquery.min.js", "jquery-ui.min.js", "turn.js", "codemirror-compressed.js", "jquery.rdfquery.core-1.0.js", "contentscript.js" ],
      "css": [ "turn.css", "codemirror.css", "custom.css" ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "web_accessible_resources": [
    "fold.png"]
}
